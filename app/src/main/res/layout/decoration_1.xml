<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- Dekorasi atas kiri -->
    <ImageView
        android:id="@+id/topLeftDecoration"
        android:layout_width="92dp"
        android:layout_height="94dp"
        android:layout_marginStart="16dp"
        android:contentDescription="Top Left Decoration"
        android:src="@drawable/plant_asset_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Dekorasi bawah kanan -->
    <ImageView
        android:id="@+id/bottomRightDecoration"
        android:layout_width="127dp"
        android:layout_height="140dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="Bottom Right Decoration"
        android:src="@drawable/plant_asset_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
